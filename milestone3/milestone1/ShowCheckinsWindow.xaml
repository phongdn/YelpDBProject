<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:milestone1"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="milestone1.ShowCheckinsWindow"
        mc:Ignorable="d"
        Title="ShowCheckinsWindow" Height="302.624" Width="521.283">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <chartingToolkit:Chart Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="253" Width="433" Title="Number of Check-ins per Day-of-Week" Name="myChart">
            <chartingToolkit:ColumnSeries HorizontalAlignment="Left" Height="180.8" VerticalAlignment="Top" Width="302.4" Title="# of Check-ins" DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}"/>
        </chartingToolkit:Chart>

    </Grid>
</Window>
